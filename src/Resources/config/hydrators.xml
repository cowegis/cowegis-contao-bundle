<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="false" autoconfigure="false" public="false"/>

        <instanceof id="Cowegis\Bundle\Contao\Hydrator\Hydrator">
            <tag name="Cowegis\Bundle\Contao\Hydrator\Hydrator" />
        </instanceof>

        <service id="Cowegis\Bundle\Contao\Hydrator\MapHydrator">
            <argument type="service" id="Cowegis\Bundle\Contao\Map\Layer\LayerTypeRegistry" />
            <argument type="service" id="Cowegis\Bundle\Contao\Map\Control\ControlTypeRegistry" />
            <argument type="service" id="Cowegis\Bundle\Contao\Map\Icon\IconTypeRegistry" />
            <argument type="service" id="netzmacht.contao_toolkit.repository_manager" />
        </service>

        <service id="Cowegis\Bundle\Contao\Hydrator\Options\MapOptionsHydrator" />

        <service id="Cowegis\Bundle\Contao\Hydrator\Options\LocateOptionsHydrator">
            <tag name="Cowegis\Bundle\Contao\Hydrator\Hydrator" priority="-32" />
        </service>

        <service id="Cowegis\Bundle\Contao\Hydrator\Options\BoundsOptionsHydrator">
            <tag name="Cowegis\Bundle\Contao\Hydrator\Hydrator" priority="-32" />
        </service>

        <service id="Cowegis\Bundle\Contao\Hydrator\Options\ViewHydrator" />

        <service id="Cowegis\Bundle\Contao\Hydrator\Layer\LayerObjectOptionsHydrator" />

        <service id="Cowegis\Bundle\Contao\Hydrator\Layer\GridLayerOptionsHydrator" />

        <service id="Cowegis\Bundle\Contao\Hydrator\Presets\PopupPresetHydrator" />

        <service id="Cowegis\Bundle\Contao\Hydrator\Presets\TooltipPresetHydrator" />

        <service id="Cowegis\Bundle\Contao\Hydrator\EventDispatchingHydrator">
            <argument type="service" id="event_dispatcher" />
            <tag name="Cowegis\Bundle\Contao\Hydrator\Hydrator" priority="-128" />
        </service>
    </services>
</container>
